<section class="row">
  <% cards.forEach(cards => { %>
  <% const tech = cards.techno.split(' ') %>
  <article class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="fix-relative-img">
        <img src="<%= cards.url%>" alt="intÃ©gration the montaigne" style="width:100%;height:232px;">
        <figure class="fix-absolute-img">
          <a target="_blank" href="<%= cards.github %>">
            <img class="resize-git-view" src="img/contact/git.png" alt="">
          </a>
        </figure>
      </div>
      <div class="caption">
        <h3>
          <%= cards.name %>
        </h3>
        <p>
          <%= cards.description %>
        </p>
        <p style="font-size:1.4em;">
          <% for(let i = 0; i < tech.length; i++){ %>
            <span class="label label-default bbleu"><%= tech[i] %></span>
          <% } %>
        </p>
      </div>
    </div>
  </article>
  <% }) %>
</section>