<div class="row">
  <% skill.forEach(skill => { %>
    <div class="col-sm-6 col-md-6 col-lg-3">
      <div class="progress skill-bar">
        <div class="progress-bar progress-bar b<%= skill.color %>" role="progressbar" aria-valuenow="<%= skill.mastery%>" aria-valuemin="0" aria-valuemax="100">
          <span class="skill fond"><%= skill.name %>
            <i class="val fond"><%= skill.mastery %>%</i>
          </span>
        </div>
      </div>
    </div>
  <% }) %>
</div>